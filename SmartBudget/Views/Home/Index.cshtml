<h1>Welcome, @ViewBag.Username</h1>
@if (ViewBag.Budget != null)
{
    <p>Income: @ViewBag.Budget.Income</p>
    <p>Expenses: @ViewBag.Budget.Expenses</p>
    <p>Savings: @ViewBag.Budget.Savings</p>
}
else
{
    <p>No budget created yet.</p>
    <a asp-action="Create" asp-controller="Budget">Create Budget</a>
}
