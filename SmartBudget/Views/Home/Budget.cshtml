@model SmartBudget.Models.Financial

<!DOCTYPE html>
<html>
<head>
    <title>Predictive Financial Analysis</title>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>
    <h1>Predictive Financial Analysis</h1>

    <div>
        <canvas id="budgetChart" width="400" height="200"></canvas>
    </div>

        
    <script>
        // Data from the server-side model, this won't work since there is no server
        const income = @Model.Income;
        const expenses = @Model.Expenses;
        const predictedSavings = @Model.PredictedSavings;

        // Chart.js setup
        const ctx = document.getElementById('budgetChart').getContext('2d');
        const chart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: ['Current Income', 'Current Expenses', 'Predicted Savings'],
                datasets: [{
                    label: 'Financial Overview',
                    data: [income, expenses, predictedSavings],
                    backgroundColor: [
                        'rgba(54, 162, 235, 0.2)',
                        'rgba(255, 99, 132, 0.2)',
                        'rgba(75, 192, 192, 0.2)'
                    ],
                    borderColor: [
                        'rgba(54, 162, 235, 1)',
                        'rgba(255, 99, 132, 1)',
                        'rgba(75, 192, 192, 1)'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });
    </script>
</body>
</html>

