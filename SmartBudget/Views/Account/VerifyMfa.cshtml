@model SmartBudget.ViewModels.VerifyMfaViewModel

<h2>Verify Your Account</h2>

<form asp-action="VerifyMfa" method="post">
    <div class="form-group">
        <label for="Token">MFA Code</label>
        <input asp-for="UserId" hidden />
        <input asp-for="ReturnUrl" hidden />
        <input asp-for="Token" class="form-control" />
        <span asp-validation-for="Token" class="text-danger"></span>
    </div>

    <div class="form-check">
        <input asp-for="RememberClient" class="form-check-input" type="checkbox" />
        <label class="form-check-label" for="RememberClient">Remember this device</label>
    </div>

    <button type="submit" class="btn btn-primary">Verify</button>
</form>
