@model List<SmartBudget.ViewModels.UserPrivacyComplianceViewModel>

@{
    ViewData["Title"] = "Review Data Privacy Compliance";
}

<div class="container mt-4">
    <h1 class="text-center">@ViewData["Title"]</h1>
    <p class="text-muted text-center">
        Ensure SmartBudget meets data privacy standards and user preferences are respected.
    </p>

    <h3 class="mt-4">Compliance Checklist</h3>
    <ul class="list-group mb-4">
        <li class="list-group-item"><i class="bi bi-check-circle text-success"></i> All sensitive data is encrypted.</li>
        <li class="list-group-item"><i class="bi bi-check-circle text-success"></i> Only authorized users can access sensitive data.</li>
        <li class="list-group-item"><i class="bi bi-check-circle text-success"></i> System adheres to privacy regulations (e.g., GDPR).</li>
        <li class="list-group-item"><i class="bi bi-check-circle text-success"></i> Users' consent is recorded and auditable.</li>
    </ul>

    <h3>User Privacy Preferences</h3>
    <table class="table table-hover table-striped table-bordered mt-4">
        <thead class="thead-dark">
            <tr>
                <th>User Name</th>
                <th>Notification Enabled</th>
                <th>Data Visibility</th>
                <th>Privacy Agreed</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count == 0)
            {
                <tr>
                    <td colspan="4" class="text-center text-muted">No user preferences found.</td>
                </tr>
            }
            else
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.UserName</td>
                        <td>@(item.NotificationEnabled ? "Yes" : "No")</td>
                        <td>@item.DataVisibility</td>
                        <td>@(item.PrivacyAgreed ? "Agreed" : "Not Agreed")</td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
