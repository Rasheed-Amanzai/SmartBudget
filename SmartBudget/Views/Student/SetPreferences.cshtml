@model SmartBudget.Models.UserPreferences

@{
    ViewData["Title"] = "Set Preferences";
}

<div class="container mt-4">
    <h2 class="mb-4 text-center">@ViewData["Title"]</h2>

    <form asp-action="SetPreferences" method="post" class="p-4 border rounded shadow-sm bg-light">
        <div class="form-check mb-3">
            <input type="checkbox" id="NotificationEnabled" name="NotificationEnabled" 
                   class="form-check-input" value="true" @(Model.NotificationEnabled ? "checked" : "") />
            <label for="NotificationEnabled" class="form-check-label">Enable Notifications</label>
        </div>

        <div class="form-group mb-3">
            <label for="DataVisibility" class="form-label">Data Visibility</label>
            <select id="DataVisibility" name="DataVisibility" class="form-select">
                @if (Model.DataVisibility == "Private")
                {
                    <option value="Private" selected>Private</option>
                    <option value="Public">Public</option>
                }
                else
                {

                    <option value="Private">Private</option>
                    <option value="Public" selected>Public</option>
                }
            </select>
        </div>

        <div class="form-check mb-3">
            <input type="checkbox" id="PrivacyAgreed" name="PrivacyAgreed" class="form-check-input" 
                   value="true" @(Model.PrivacyAgreed ? "checked" : "") required />
            <label for="PrivacyAgreed" class="form-check-label">
                I agree to the <a href="/PrivacyPolicy" class="text-decoration-none">Privacy Policy</a>
            </label>
        </div>

        <button type="submit" class="btn btn-primary w-100">Save Preferences</button>
    </form>
</div>


            