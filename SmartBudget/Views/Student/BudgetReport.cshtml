@model List<SmartBudget.Models.BudgetReport>

@{
    ViewData["Title"] = "Budget Report";
}

<div class="container mt-4">
    <h2 class="mb-4 text-center">@ViewData["Title"]</h2>

    <table class="table table-hover table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Title</th>
                <th>Amount</th>
                <th>Description</th>
                <th>Created At</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count == 0)
            {
                <tr>
                    <td colspan="4" class="text-center text-muted">No budget reports available.</td>
                </tr>
            }
            else
            {
                @foreach (var report in Model)
                {
                    <tr>
                        <td>@report.Title</td>
                        <td>@report.Amount.ToString("C")</td> <!-- Display as currency -->
                        <td>@report.Description</td>
                        <td>@report.CreatedAt.ToString("MMMM dd, yyyy")</td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
